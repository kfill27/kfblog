<div class="container">
  <p id="notice"><%= notice %></p>
  <div class="col-md-6 col-md-offset-3">
    <%= @project.name %>
    <%= image_tag attachment_url(@project, :project_image, :fill, 350, 350, format: "jpg") %>
    <%= @project.url %>
    <%= @project.description %>
  </div>

  <div class="buttons">
    <%= link_to 'Edit', edit_project_path(@project) %> |
    <%= link_to 'Back', projects_path %>
  </div>
</div>
