<%= render 'layouts/header' %>

<div class = "jumbotron">
  <div class="container jumbo-text">
    <h1>Code is my<br>jam...</h1>
  </div>
<a id="about"></a>
</div>

<div class="container" id="page1">
  <div class="row about-me-background col-md-12">
    <div class="col-md-6 about-me-image">
      <img src="http://placehold.it/350x350">
    </div>
    <div class="about-me-text col-md-6">
      <h2>I also dig art, beaches, books, craft beer, dancing, music, pottery, UI/UX, yoga, and writing...</h5>
      <%= link_to 'Check out my Blog', posts_path, class: "btn btn-default col-md-8 col-md-offset-2 col-sm-6 col-sm-offset-3 col-xs-8 col-xs-offset-2 link-to-blog" %>
    </div>
  </div>
<a id="portfolio"></a>
</div>

<div class="container col-md-12" id="page2">
  <hr>

  <div class="row">
    <% @projects.each do |project| %>
      <div class="col-sm-6 col-md-4">
      <div class="thumbnail">
        <img src="http://placehold.it/350x250">
        <div class="caption">
          <h3><%= project.name %></h3>
          <p><%= project.description %></p>
          <%= link_to 'go to live site', project.url %>
          <%= link_to 'Show', project %>
          <% if current_user.try(:admin?) %>
            <%= link_to 'Edit', edit_project_path(project) %>
            <%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %>
          <% end %>
        </div>
      </div>
      </div>
    <% end %>
  </div>

      <div class="col-md-12">
        <%= link_to 'See All', projects_path, class: "btn" %>
      </div>

  <hr class="col-md-12">
<a id="contact"></a>
</div>

<div class="contact-section" id="page3">
<h1>Contact Me</h1>
  <div class="container">
      <form action="mailto:kfillmore27@gmail.com" method="GET">
        <input name = "subject" type="text" class="form-control" placeholder="Your Name">
        <input type="email" class="form-control" placeholder="Your Email">
        <textarea name = "body" class="form-control " rows="5"></textarea>
        <button type="submit" value="Send" class="btn btn-default col-md-12">Send Message</button>
      </form>
  </div>
</div>

<%= render 'layouts/footer' %>
